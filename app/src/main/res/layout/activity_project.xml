<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Input fields for project details -->
    <EditText
        android:id="@+id/etProjectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Project Name"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etPhase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phase"
        android:layout_below="@+id/etProjectName"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:layout_below="@+id/etPhase"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etSupervisorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Supervisor Name"
        android:layout_below="@+id/etLocation"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Duration (in months)"
        android:layout_below="@+id/etSupervisorName"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Create button -->
    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:layout_below="@+id/etDuration"
        android:layout_marginTop="16dp" />

    <!-- RecyclerView to display project entries -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnCreate"
        android:layout_marginTop="16dp" />

</RelativeLayout>